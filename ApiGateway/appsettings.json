{
  "TokenConfiguration": {
    "Audience": "JWTServicePostmanClient",
    "Issuer": "JWTServiceAccessToken",
    "Key": "ProjectWebAppMicroservices",
    "RequireHttpsMetadata": true,
    "SaveToken": true,
    "TokenExpireTime": 3600,
    "ValidateAudience": true,
    "ValidateIssuer": true,
    "EnableSSL": false,
    "MonthTokenExpireTime": 2592000
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Gateway": {
    "Routes": {
      "serviceA": {
        "ClusterId": "ServiceA",
        "Match": {
          "Path": "/api/serviceA/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "ServiceA": {
        "ClusterId": "ServiceA",
        "Swagger": {
          "Endpoint": "/swagger/serviceA/v1/swagger.json",
          "Spec": "https://localhost:444/swagger/v1/swagger.json",
          "OriginPath": "/api/serviceA",
          "TargetPath": "/api"
        },
        "Destinations": {
          "serviceA": {
            "Address": "https://localhost:444/"
          }
        }
      }
    }
  }
}
